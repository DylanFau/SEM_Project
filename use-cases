@startuml
title Population Reporting System - Use Case Diagram (Compact)

' Actors on left
left to right direction
actor "Data Analyst" as DA
actor "Regional Manager" as RM
actor "Population Researcher" as PR
actor "Government Advisor" as GA
actor "Language Researcher" as LR
actor "System Administrator" as SA

' System boundary
rectangle "Population Reporting System" {
    usecase UC1 as "Generate Country\nPopulation Report"
    usecase UC2 as "Generate Continent\nPopulation Report"
    usecase UC3 as "View Top N\nPopulated Cities"
    usecase UC4 as "View Urban vs Rural\nPopulation"
    usecase UC5 as "View Population\nof a Country"
    usecase UC6 as "View All Capital\nCities by Population"
    usecase UC7 as "View Population\nby Language"
    usecase UC8 as "Manage System\nData Access"

    ' Include/Extend relationships
    UC1 ..> UC4 : <<include>>
    UC2 ..> UC4 : <<include>>
    UC3 ..> UC6 : <<extend>>
}

' Actor associations (grouped for compactness)
DA --> UC1
DA --> UC4

RM --> UC2
RM --> UC6

PR --> UC3
GA --> UC5
LR --> UC7
SA --> UC8

' External database below the system
rectangle Database {
    UC1 --> Database
    UC2 --> Database
    UC3 --> Database
    UC4 --> Database
    UC5 --> Database
    UC6 --> Database
    UC7 --> Database
    UC8 --> Database
}

@enduml
